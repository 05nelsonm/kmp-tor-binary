FROM i386/ubuntu:16.04@sha256:bcb8397f1390f4f0757ca06ce184f05c8ce0c7a4b5ff93f9ab029a581192917b

ENV TZ=Europe/Moscow
RUN ln -snf /usr/share/zoneinfo/$TZ /etc/localtime && echo $TZ > /etc/timezone

RUN apt-get update
RUN apt-get -y upgrade

RUN echo "path-exclude=/usr/share/locale/*" >> /etc/dpkg/dpkg.cfg.d/01_nodoc
RUN echo "path-exclude=/usr/share/man/*" >> /etc/dpkg/dpkg.cfg.d/01_nodoc
RUN echo "path-exclude=/usr/share/doc/*" >> /etc/dpkg/dpkg.cfg.d/01_nodoc

RUN apt-get install -y \
    git \
    zip \
    unzip \
    wget \
    build-essential \
    make \
    patch \
    libtool \
    pkg-config \
    autopoint \
    automake \
    perl \
    po4a \
    doxygen \
    python3

RUN apt-get -y autoremove --purge
RUN apt-get clean

WORKDIR /work

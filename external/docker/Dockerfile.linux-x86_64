FROM amd64/ubuntu:16.04@sha256:a3785f78ab8547ae2710c89e627783cfa7ee7824d3468cae6835c9f4eae23ff7

ENV TZ=Europe/Moscow
RUN ln -snf /usr/share/zoneinfo/$TZ /etc/localtime && echo $TZ > /etc/timezone

RUN apt-get update
RUN apt-get -y upgrade

RUN echo "path-exclude=/usr/share/locale/*" >> /etc/dpkg/dpkg.cfg.d/01_nodoc
RUN echo "path-exclude=/usr/share/man/*" >> /etc/dpkg/dpkg.cfg.d/01_nodoc
RUN echo "path-exclude=/usr/share/doc/*" >> /etc/dpkg/dpkg.cfg.d/01_nodoc

RUN apt-get install -y \
    git \
    zip \
    unzip \
    wget \
    build-essential \
    make \
    patch \
    libtool \
    pkg-config \
    autopoint \
    automake \
    perl \
    po4a \
    doxygen \
    python3

RUN apt-get -y autoremove --purge
RUN apt-get clean

WORKDIR /work
